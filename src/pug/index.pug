doctype html
html
	head(
		prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#"
	)
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width")
		title magcho's profile
		link(rel="stylesheet", href="./main.css")
		include _helmet
		script
			| let vh = window.innerHeight * 0.01;document.documentElement.style.setProperty('--vh', `${vh}px`);

	body
		//- div#controls
			//- button#active active
			//- button#hover hover
		//- 	button#idle idle
		//- 	button#pa PA
		//- 	button#program program
		//- 	button#electro electro
		//- 	button#penguin_in1 pen_in1
		//- 	button#penguin_out1 pen_out1
		//- 	button#penguin_in2 pen_in2
		//- 	button#penguin_out2 pen_out2
		#loading_screen
			.content
				#loading_animation
					img(src="./img/pen.svg")
				p Now Loading...

		#contents_container
			#page1.page
				#three_container1
				ul#links
					li#skils
						a(href="#page2") SKILL
					li#creation
						a(href="#page3") ACTIVITY
					li#profile
						a(href="#page4") PROFILE
					//- li#contacts
					//- 	a(href="#page5") CONTACTS

			#page2.page
				#skill_container
					#skillArea
						h2 SKILL
						#program.skillSection
							h3 Programming
							p
								| webやemacsパッケージ開発など
							ul.tools
								li HTML5
								li Pug
								li Stylus
								li Typescript
								li C++
								li Python
								li Go
								li …
						#electro.skillSection
							h3 Electronics
							p
								| マイコン制御や基板設計など
							ul.tools
								li Arduino
								li RaspberryPi
								li ESP
								li KiCAD
								li …
						#pa.skillSection
							h3 Stage Staff
							p
								| 音楽ライブや配信など
							ul.tools
								li Lighting
								li PA
								li SoundRecording
								li Streaming
								li …
					#three_container2

			#page3.page
				h2 ACTIVITY
				#activity_container
					include ./_generated/_activity.pug
					each item, index in activityList
						a(href=`${item.href}`, target="_blank")
							figure.activity_item(id=`${index + 1}`)
								img(
									src=`${item.thumnailPath}`,
									loading="lazy",
									width="920",
									height="517"
								)
								figcaption
									h3 #{item.title}

			#page4.page
				h2 PROFILE

				#icon-frame
					img#icon-image(src="./img/icon.svg")
				#infomation
					p 「Suetake Dai」magchoをハンドルネームとし、創作/開発活動を行う。
					p ペンギンと梨が好き、あと寿司も好き。
					p 1999年生まれ
				ul#contacts-info
					li Mail: mail@magcho.com
					li
						a(href="https://twitter.com/magcho0527") Twitter: @magcho0527
					li
						a(href="https://github.com/magcho") GitHub: @magcho

				include _footer
				+footer('./')

			script(src="./main.js")
